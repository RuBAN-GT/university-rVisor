<div class="ui stacked segment">
  <h2 class="ui center aligned header">Измнение настроек</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "ui form" }) do |f| %>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="field">Ожидание активации: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, 'Пароль' %>
      <em>Оставьте поле пустым, если вы не хотите его менять</em>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, 'Подтверждение пароля' %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :current_password, 'Текущий пароль' %>
      <em>Для внесения изменений введите актуальный пароль</em>
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

      <%= f.button "Обновить", class: "ui fluid large primary button" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>