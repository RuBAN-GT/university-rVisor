<h1 class="ui header"><%= t('.sign_in', :default => "Sign in") %></h1>

<%= form_for resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "ui form"} do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field"><div class="ui checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div></div>
  <% end -%>

  <%= f.button t('.sign_in', :default => "Sign in"), :class => "ui primary button" %>
<% end %>
