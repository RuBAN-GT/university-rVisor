<div class="ui stacked segment">
  <h2 class="ui center aligned header">Вход в панель управления</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { :class => 'ui form' }) do |f| %>
      <div class="field <%= f.attr_error_class :email %>">
        <%= f.label :email %>
        <div class="ui left icon input">
          <i class="user icon"></i>
          <%= f.email_field :email, autofocus: true, required: true %>
        </div>
      </div>

      <div class="field <%= f.attr_error_class :password %>">
        <%= f.label :password, 'Пароль' %>
        <div class="ui left icon input">
          <i class="lock icon"></i>
          <%= f.password_field :password, autocomplete: "off", required: true %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
          <div class="field">
            <div class="ui checkbox">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, 'Запомнить меня' %>
            </div>
          </div>
      <% end -%>

      <%= f.button "Войти", class: "ui primary fluid large button" %>
      <div class="ui horizontal divider">или</div>
      <%= link_to "Ещё не зарегистрированы?", new_user_registration_path, class: "ui fluid large button" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>