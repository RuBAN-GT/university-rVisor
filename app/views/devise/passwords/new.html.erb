<h1 class="ui header"><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h1>

<%= form_for resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "ui form" } do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <%= f.button t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), :class => "ui primary button" %>
<% end %>
