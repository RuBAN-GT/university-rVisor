<h1 class="ui header"><%= t('.change_your_password', :default => 'Change your password') %></h1>

<%= form_for resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => "ui form"} do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, t('.new_password', :default => 'New password') %>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t('.confirm_new_password', :default => 'Confirm new password') %>
    <%= f.password_field :password_confirmation %>
  </div>

  <%= f.button t('.change_my_password', :default => 'Change my password'), :class => "ui primary button" %>
<% end %>
