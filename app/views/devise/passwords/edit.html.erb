<h2>Изменение пароля</h2>

<div class="ui grid">
  <div class="sixteen wide mobile eight wide tablet nine wide computer column">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "ui form" }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, 'Новый пароль' %>
        <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> - минимальная длина пароля</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off", required: true %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, 'Подтверждение пароля', required: true %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.button "Изменить мой пароль", class: "ui button" %>
      </div>
    <% end %>
  </div>
  <div class="sixteen wide mobile eight wide tablet seven wide computer column">
    <%= render "devise/shared/links" %>
  </div>
</div>